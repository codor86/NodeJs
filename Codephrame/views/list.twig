{% extends 'base.twig' %}

{% block content %}
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h1 class="text-uppercase text-white font-weight-bold">Some Results!</h1>
                    <hr class="divider my-4">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 font-weight-light mb-5">
                    It's a good looking theme, but it's too easy just getting it to work in Twig and Node...
                    </p>
                    <a class="btn btn-primary btn-xl js-scroll-trigger" href="#next">Next.....</a>
                </div>
            </div>
        </div>
    </header>

    <section id="next">
        <div class="container">
            <div class="col-md-8 m-auto">
            <h3 class="my-3"><a class="btn btn-secondary" href="/form">
                <i class="fa fa-plus mr-1"></i>Create New</a></h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>City</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in list %}
                            <tr>
                                <td>{{ row.fullName }}</td>
                                <td>{{ row.email }}</td>
                                <td>{{ row.mobile }}</td>
                                <td>{{ row.city }}</td>
                                <td>
                                    <a href="/form/{{ row._id }}/#form"><i class="fas fa-pencil-alt fa-lg" aria-hidden="true"></i></a>
                                    <a href="/form/delete/{{ row._id }}" onclick="return confirm('Are you sure?')"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
